@model burgers2.ViewModels.CartViewModel

@{
    ViewBag.Title = "Index";
}



@if (Model.Total == 0)
{
    <div class="heading">
        <div class="heading">
            <img class="heading-img" src="~/Content/Images/heading_logo.png" alt="">
            <h2>Shopping Cart</h2>
        </div>
        <h5 class="mt-10 mb-30">Say hello, send us a message</h5>
        <p>Your shopping cart is empty because you haven't added anything in it</p>
    </div>
}
else
{
    <div class="heading">
        <div class="heading">
            <img class="heading-img" src="~/Content/Images/heading_logo.png" alt="">
            <h2>Shopping Cart</h2>
        </div>
        <h5 class="mt-10 mb-30">To place an order proceed to checkout</h5>

    </div>

    <div class="container mb-4">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col"> </th>
                                <th scope="col">Product</th>

                                <th scope="col" >Quantity</th>
                                <th scope="col" >Price</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td><img src="~/UploadedFiles/@item.Meal.pictureUrl" class="cart-img" /></td>
                                    <td>@item.Meal.Name</td>




                                    <td>

                                       @Html.ActionLink("-", "MinusCount", new { id = item.Id }, new { @class = "btn btn-outline-primary " })
                                        
                                        @item.Count
                                       
                                        @Html.ActionLink("+", "PlusCount", new { id = item.Id }, new { @class = "btn btn-outline-primary " })
                                    </td>


                                    <td>R @item.Meal.Price</td>
                                    <td class="text-right">
                                        @Html.ActionLink("Remove", "Remove", new { Id = item.Id }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }

                            <tr>
                                <td></td>

                                <td></td>
                                <td></td>
                                <td><strong>Total</strong></td>
                                <td class="text-right"><strong>R @Model.Total</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col mb-2">
                <div class="row">
                    <div class="col-sm-12  col-md-6">

                        @Html.ActionLink("Continue shopping", "Menu", "Meals", "", new { @class = "btn btn-block btn-light" })

                    </div>
                    <div class="col-sm-12 col-md-6 text-right">
                        @Html.ActionLink("Checkout", "Checkout", "Orders", "", new { @class = "btn btn-lg btn-block btn-success text-uppercase" })

                    </div>
                </div>
            </div>
        </div>
    </div>
}





