@model burgers2.ViewModels.MealViewModel

@{
    /**/

    ViewBag.Title = "Add";
}

<div class="heading">
    <img class="heading-img" src="~/Content/Images/heading_logo.png" alt="">
    <h2>Edit a meal</h2>
</div>


@using (Html.BeginForm("Update", "Meals", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { placeholder = "name@example.com", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Categories)
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Id", "Name"), new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { placeholder = "name@example.com", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new { placeholder = "name@example.com", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.pictureUrl)
        @Html.TextBoxFor(m => m.pictureUrl, Model.pictureUrl, new { type = "file", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.pictureUrl, "", new { @class = "error-msg" })
    </div>


    <button class="btn-primaryc plr-25">Save</button>



}
