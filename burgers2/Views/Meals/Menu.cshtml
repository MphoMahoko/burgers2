                            <div class="col-md-6 food-menu pizza">

                                <div class="sided-90x mb-30 ">
                                    <div class="s-left"><img class="br-3" src="~/UploadedFiles/@meal.pictureUrl" alt="Menu Image"></div>
                                    <!--s-left-->
