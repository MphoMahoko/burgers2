@{
    Layout = "~/Views/Shared/Layout - home.cshtml";
}


@model IEnumerable<burgers2.Models.Meal>

@{
    ViewBag.Title = "Menu";

}
<div class="row">



</div>

@if (TempData["Alert"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Alert"]
        
    </div>
}




