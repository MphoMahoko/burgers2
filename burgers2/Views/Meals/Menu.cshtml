                    </li>
                </ul>
            </div>
            <!--col-sm-12-->
        </div>
        <!--row-->

        <div class="row">





            <div class="tab-content">
                <div id="all" class="container tab-pane active">


                    @foreach (var meal in Model.Where(m => m.Deleted == false))
