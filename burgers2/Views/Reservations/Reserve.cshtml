@model burgers2.Models.Reservation

@{
    ViewBag.Title = "Reserve";
}


<section class="story-area left-text center-sm-text">
    <div class="container">
        <div class="heading">
            <img class="heading-img" src="images/heading_logo.png" alt="">
            <h2>Make a reservation</h2>
            <h5 class="mt-10 mb-30">Book yourself a table</h5>
            <p class="mx-w-700x mlr-auto">
                Proin dictum viverra varius. Etiam vulputate libero dui, at pretium
                elit elementum quis. Enean porttitor eros non ultrices convallis.
                Vivamus quis dolor ut arcu lobortis finibus a vitae leo. Sed eget tempus sem.
                Nullam sed lacus sed metus tincidunt lobortis lobortis at nibh. Morbi euismod, arcu in gravida rhoncus
            </p>
        </div>
        <!-- reserve -->


        @using (Html.BeginForm("Reserve", "Reservations", new { @class = "form-style-1 placeholder-1" }))
        {
            <div class="form-row">
                <div class="form-group col-md-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(m=>m.Name)
                </div>
                <div class="form-group col-md-4">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone" })
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
                <div class="form-group col-md-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">

                    @Html.DropDownList("NumberPeople", new List<SelectListItem>{
                        new SelectListItem{Text ="1 person", Value = "1" },
                        new SelectListItem{Text ="2 person", Value = "2" },
                        new SelectListItem{Text ="3 person", Value = "3" },
                        new SelectListItem{Text ="4 person", Value = "4" }

                     }, "Number of people", new {@class = "form-control", placeholder = "Number of people", required = true })


                    <!--
                <select id="inputState" class="form-control">
                    <option selected>Number of people...</option>
                    <option>1 person</option>
                    <option>2 people</option>
                    <option>3 people</option>
                    <option>4 people</option>
                </select>
                    -->
                </div>
                <div class="form-group col-md-4">


                    @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder = "e.g. 24 May 1980" })
                    @Html.ValidationMessageFor(m => m.Date)
                    <script>
                        $('#Date').datepicker({
                            uiLibrary: 'bootstrap4'
                        });

                    </script>
                </div>
                <div class="form-group col-md-4">

                    @Html.DropDownList("Time",new List<SelectListItem> {
                        new SelectListItem {Text="11:00 - 13:00", Value="11:00 - 13:00"},
                        new SelectListItem {Text="13:00 - 15:00", Value="13:00 - 15:00"},
                        new SelectListItem {Text="15:00 - 17:00", Value="15:00 - 17:00"},
                        new SelectListItem {Text="17:00 - 19:00", Value="17:00 - 19:00"},
                        new SelectListItem {Text="19:00 - 21:00", Value="19:00 - 21:00"},
                        new SelectListItem {Text="21:00 - 23:00", Value="21:00 - 23:00"}
               }, "Time",new { @class="form-control", required =  true})


                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-md-4">

                    @Html.DropDownList("Venue",new List<SelectListItem> {
                        new SelectListItem {Text="Venue 1", Value="1"},
                        new SelectListItem {Text="Venue 2", Value="2"},
                        new SelectListItem {Text="Venue 3", Value="3"},
                        new SelectListItem {Text="Venue 4", Value="4"},
               }, "Venue",new { @class="form-control", required = true})


                </div>


            </div>

            <div class="form-group">
                @Html.TextAreaFor(m => m.Message, new { placeholder = "message", rows = "5", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Message)
            </div>
            <button class="btn-primaryc plr-25">Reserve</button>
            
        }

        <!-- end of reserve -->
    </div><!-- container -->
</section>